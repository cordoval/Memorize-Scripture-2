<div class="post">
    <h2 class="post_title">
        {{ user.firstName }} {{ user.lastName }}
    </h2>
    <p class="post_info">
        User since: {{ user.createdAt | date('F jS, Y') }}
    </p>
    <p class="post_info">
        Email: {{ user.email }}
    </p>
    <p class="post_info">
        Number of sessions: {{ user.sessions | length }}
    </p>
    <br/>
    <p class="post_body">
       <span>Active Sessions:</span>
       <br><br>
       <ul>
       {% for key, session in user.sessions %}
          <li>
             <div class="sessiontitle">{{ session.title }}</div>
            <ul>
                <li>
                    Number of verses: {{ session.sessionverses |length }}
                    {% for key, sessionverse in session.sessionverses %}
                    <li id="lineverse-{{ key }}">
                    <div class="versetext">"{{ sessionverse.verse.versetext }}"</div>
                    <div class="button"><a class="ajax_link" href="{{ path( 'MemorizeScripture_addRecitation' , { 'id' : sessionverse.id, '_format': "json" } ) }}"><img src="{{ asset('bundles/memorizescripture/images/icons/tick.png') }}"/></a></div>
                    <div class="versenumber">{{ sessionverse.verse.versenum }}</div>
                    </li>
                    {% endfor %}
                </li>
            </ul>
          </li>
       {% endfor %}
       </ul>
    </p>
</div>
